[Unit]
Description=Todo app, ACIT4640
After=network.target

[Service]
Environment=NODE_PORT=8080
WorkingDirectory=/home/{{todoapp_user}}/ACIT4640-todo-app
Type=simple
User={{todoapp_user}}
ExecStartPre=/bin/sleep 15
ExecStart=node /home/{{todoapp_user}}/ACIT4640-todo-app/server.js
Restart=always

[Install]
WantedBy=multi-user.target